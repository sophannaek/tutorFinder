rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId; 
      allow update: if request.auth.uid == userId;
    }
    match /jobs/{userId} {
        allow read: if true;
        allow write: if request.auth.uid == userId; 
        allow update: if request.auth.uid == userId; 
    }

  }  
} 